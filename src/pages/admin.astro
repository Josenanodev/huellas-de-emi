    (document.getElementById("cat-specialCare") as HTMLTextAreaElement).value = cat.specialCare || "";
    (document.getElementById("cat-healthConditions") as HTMLInputElement).value = cat.healthConditions.join(", ");
    (document.getElementById("cat-vaccinated") as HTMLInputElement).checked = cat.vaccinated;
    (document.getElementById("cat-sterilized") as HTMLInputElement).checked = cat.sterilized;

    currentCatImages = [...cat.images];
    pendingCatImageDeletes = new Set();
    renderExistingCatImages();
    (document.getElementById("cat-images") as HTMLInputElement).value = "";

    if (catFormTitle) catFormTitle.textContent = "Editar Gato";
    window.scrollTo({ top: 0, behavior: "smooth" });
  }

